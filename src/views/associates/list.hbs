<div class="container p-4">
    <div class="card">
        <div class="card-header custom-header-table">
            <h3>Associates list</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light small">
                        <tr>
                            <th scope="col">Id number</th>
                            <th scope="col">Name</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Residency</th>
                            <th scope="col">Username</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each associates}}
                        <tr>
                            <th>{{id}}</th>
                            <td>{{name}}</td>
                            <td>{{phone}}</td>
                            <td>{{city}}, {{country}}</td>
                            <td>{{username}}</td>
                            <td>
                                <a href="/associates/delete/{{id}}" class="btn btn-link btn-sm">
                                    <i class="fas fa-trash text-danger"></i>
                                </a>
                            </td>
                            <td>
                                <a href="/associates/edit/{{id}}" class="btn btn-link btn-sm text-secondary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>